def numToBaseB(N, B):
    if N == 0:
        return ''
    return numToBaseB(N//B, B) + str(N % B)

def BaseBToNum(S, B):
    if S == '':
        return 0
    return BaseBToNum(S[:-1], B) * B + int(S[-1])

def baseToBase(B1, B2, SinB1):
    return numToBaseB(BaseBToNum(SinB1, B1), B2)

def add(S, T):
    return numToBaseB(BaseBToNum(S, 2) + BaseBToNum(T, 2), 2)

print(add('011', '100'))
